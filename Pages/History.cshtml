@page
@model EfFuncCallSK.Pages.HistoryModel

@{
    ViewData["Title"] = "Chat History";
}

<style>
    .chat-history {
        margin-top: 20px;
        min-height: 370px;
    }

    .chat-history ul {
        list-style-type: none;
        padding: 0;
    }

    .chat-history li {
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 10px;
    }

    .chat-history li .stuff {
        margin-top: 10px;
    }

    .stuff {
        margin-top: 10px;
    }

    body {
        background: linear-gradient(to right, #9bd3f8, #e9ff6d);
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
        color: #333;
    }

    .form-wrapper {
        display: flex;
        justify-content: space-between;
        background-color: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-column {
        width: 48%;
    }

    form {
        min-width: 1500px;
        margin: 0 auto;
    }

    input[type="text"],
    textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
        color: #333;
    }

    input[type="submit"] {
        background-color: #08578b;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    input[type="submit"]:hover {
        background-color: #4ba6ef;
    }

    .alert {
        padding: 10px;
        border-radius: 5px;
        margin-top: 10px;
    }

    .alert-success {
        background-color: #2ecc71;
        color: white;
    }
</style>
<h3 class="display-6">@ViewData["Title"]</h3>

<form method="get">
    <div class="form-group">
        <label for="searchTerm">Search Chat History:</label>
        <input type="text" class="form-control" id="searchTerm" name="searchTerm" placeholder="Enter search term">
        <button type="submit" class="btn btn-primary mt-2">Search</button>
    </div>
</form>

<div class="chat-history">
    <h4>Chat History</h4>
    @if (Model.ChatHistories.Any())
    {
        <ul>
            @foreach (var chat in Model.ChatHistories)
            {
                <li>
                    <div><strong>User:</strong> @chat.UserMessage</div>
                    <div classname="stuff"><strong>AI Response:</strong> @chat.AIResponse</div>
                    <div><small>@chat.Timestamp.ToString("g")</small></div>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@chat.ChatId">
                        <input type="submit" value="Delete" class="btn btn-danger"
                            onclick="return confirm('Are you sure you want to delete this item?');" />
                    </form>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No chat history available.</p>
    }
</div>
