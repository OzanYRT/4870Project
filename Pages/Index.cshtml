@page
@model IndexModel
@{
    ViewData["Title"] = Model.Service + " Function Calling with Semantic Kernel";
}
<div class="text-center">
    <h3 class="display-6">@ViewData["Title"]</h3>
    <form method="post">
        <input type="text" name="prompt" size="80" required />
        <input type="submit" value="Submit" />
    </form>
    <div style="text-align: left">
        <h5>Example prompts:</h5>
    </div>
    @if (Model.Reply != null)
    {
        <p class="alert alert-success">@Model.Reply</p>
    }
</div>
<div class="chat-history">
    <h4>Chat History</h4>
    @if (Model.ChatHistories.Any())
    {
        <ul>
            @foreach (var chat in Model.ChatHistories)
            {
                <li>
                    <div><strong>User:</strong> @chat.UserMessage</div>
                    <div><strong>AI Response:</strong> @chat.AIResponse</div>
                    <div><small>@chat.Timestamp.ToString("g")</small></div>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No chat history available.</p>
    }
</div>

